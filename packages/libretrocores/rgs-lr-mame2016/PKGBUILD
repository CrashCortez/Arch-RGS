# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-mame2016
pkgver=44415.e06d731644
pkgrel=1
arch=('x86_64')
pkgdesc="Libretro implementation of MAME 2016. (Arcade)"
url="https://github.com/libretro/mame2016-libretro"
license=('custom:MAME License')
depends=('zlib' 'glibc')
makedepends=('git' 'python2')
source=("$pkgname::git+https://github.com/libretro/mame2016-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -j$(nproc) \
        BUILDDIR="$pkgname" \
        OSD='retro' \
        verbose=1 \
        RETRO=1 \
        NOWERROR=1 \
        OS='linux' \
        TARGETOS='linux' \
        CONFIG='libretro' \
        NO_USE_MIDI=1 \
        PTR64=1 \
        TARGET='mame' \
        SUBTARGET='arcade'
}

package() {
  cd $pkgname

  install -Dm644 ./mamearcade2016_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
  install -Dm644 ./docs/LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}/"
}
