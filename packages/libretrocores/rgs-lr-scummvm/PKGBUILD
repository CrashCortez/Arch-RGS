# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-scummvm
pkgver=84256
pkgrel=1
pkgdesc="Libretro implementation of ScummVM."
arch=('x86_64')
url='https://github.com/libretro/scummvm'
license=('GPL')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/scummvm.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname/backends/platform/libretro/build

  make -j$(nproc)
}

package() {
  cd $pkgname/backends/platform/libretro/build

  install -Dm644 ./scummvm_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
