# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-pcem
pkgver=152.89b3516
pkgrel=1
pkgdesc="Libretro implementation of PCem."
arch=('x86_64')
url="https://github.com/libretro/libretro-pcem"
license=('GPL2')
depends=('zlib' 'allegro4' 'openal' 'freealut')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/libretro-pcem.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -f ./src/Makefile.libretro
}

package() {
  cd $pkgname

  install -Dm644 ./src/pcem_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
