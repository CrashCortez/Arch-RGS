# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-openlara
pkgver=1052
pkgrel=1
arch=('x86_64')
pkgdesc="Libretro implementation of Classic Tomb Raider open-source engine."
url="https://github.com/libretro/OpenLara"
license=('2-Clause BSD')
depends=('libglvnd' 'libpulse')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/OpenLara.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -C src/platform/libretro
}

package() {
  cd $pkgname

  install -Dm644 ./src/platform/libretro/openlara_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
  mkdir -p "$pkgdir/opt/archrgs/libretrocores/$pkgname/data"
  cp -r ./bin "$pkgdir/opt/archrgs/libretrocores/$pkgname/data"
}
