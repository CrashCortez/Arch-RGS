# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-nxengine
pkgver=r526.f83ccdc
pkgrel=1
pkgdesc="Libretro implementation of NXEngine. (Cave Story)"
arch=('x86_64')
url="https://github.com/libretro/nxengine-libretro"
license=('GPL3')
depends=('gcc-libs' 'glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/nxengine-libretro.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./nxengine_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"

  cp -a ./datafiles "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
