# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-quicknes
pkgver=r429.960ae34
pkgrel=1
pkgdesc="Libretro implementation of QuickNES Core. (NES)"
arch=('x86_64')
url="https://github.com/libretro/QuickNES_Core.git"
license=('custom')
depends=('zlib')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/QuickNES_Core.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./quicknes_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
