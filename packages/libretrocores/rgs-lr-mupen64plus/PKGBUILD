# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-mupen64plus
pkgver=699
pkgrel=1
pkgdesc="Libretro implementation of Mupen64plus. (Nintendo 64)"
arch=('x86_64')
url='https://github.com/libretro/mupen64plus-libretro'
license=('GPL2')
depends=('libgl')
makedepends=('git' 'mesa')
source=("$pkgname::git+https://github.com/libretro/mupen64plus-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make WITH_DYNAREC='x86_64'
}

package() {
  cd $pkgname

  install -Dm 644 ./mupen64plus_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
