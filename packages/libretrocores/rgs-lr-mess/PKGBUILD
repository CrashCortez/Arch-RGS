# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-mess
pkgver=65681.0cd48a98a3
pkgrel=1
arch=('x86_64')
pkgdesc="Libretro implementation of MAME. (MESS Port)"
url="https://github.com/libretro/mame"
license=('custom:MAME License')
depends=('gcc-libs' 'glibc')
makedepends=('git' 'python2')
source=("$pkgname::git+https://github.com/libretro/mame.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -j$(nproc) \
        BUILDDIR="$pkgname" \
        OSD='retro' \
        verbose=1 \
        RETRO=1 \
        NOWERROR=1 \
        OS='linux' \
        TARGETOS='linux' \
        CONFIG='libretro' \
        NO_USE_MIDI=1 \
        PTR64=1 \
        TARGET='mame' \
        SUBTARGET='mess'
}

package() {
  cd $pkgname

  install -Dm644 ./mess_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
  install -Dm644 ./docs/LICENSE -t "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
