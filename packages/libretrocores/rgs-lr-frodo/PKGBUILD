# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-frodo
pkgver=r156.4c15016
pkgrel=1
pkgdesc="Libretro implementation of Frodo. (Commodore 64)"
arch=('x86_64')
url="https://github.com/r-type/frodo-libretro"
license=('GPL2')
depends=('zlib')
makedepends=('git')
source=("$pkgname::git+https://github.com/r-type/frodo-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -f Makefile.libretro
}

package() {
  cd $pkgname

  install -Dm644 ./frodo_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
