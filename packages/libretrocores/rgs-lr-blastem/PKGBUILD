# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-blastem
pkgver=1841
pkgrel=1
pkgdesc="Libretro implementation of Blastem. (Sega Mega Drive)"
arch=('x86_64')
url="https://github.com/libretro/blastem"
license=('GPL3')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/blastem.git")
sha256sums=('SKIP')

pkgver() {
    cd $pkgname

    git rev-list --count HEAD
}

build() {
    cd $pkgname

    make -f Makefile.libretro
}

package() {
    cd $pkgname

    install -Dm644 ./blastem_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
