# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-beetle-pcfx
pkgver=785
pkgrel=1
pkgdesc="Libretro implementation of Mednafen PCFX. (NEC PC-FX)"
arch=('x86_64')
url="https://github.com/libretro/beetle-pcfx-libretro"
license=('GPLv2')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/beetle-pcfx-libretro.git")
md5sums=('SKIP')

pkgver() {
	cd $pkgname

	git rev-list --count HEAD
}

build() {
	cd $pkgname

	make
}

package() {
	cd $pkgname

	install -Dm644 ./mednafen_pcfx_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
