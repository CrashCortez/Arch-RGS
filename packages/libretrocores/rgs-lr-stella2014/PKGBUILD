# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-stella2014
pkgver=216.a7acf22
pkgrel=1
pkgdesc="Libretro implementation of Stella. (Atari 2600)"
arch=('x86_64')
url="https://github.com/libretro/stella2014-libretro"
license=('GPL2')
depends=('zlib' 'glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/stella2014-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd "$pkgname"

  git rev-list --count HEAD
}

build() {
  cd "$pkgname"

  make
}

package() {
  cd "$pkgname"

  install -Dm644 ./stella2014_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
