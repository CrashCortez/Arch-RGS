# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-craft
pkgver=1032.74b3a6d
pkgrel=1
pkgdesc="Libretro implementation of Craft. (Minecraft Clone)"
arch=('x86_64')
url="https://github.com/libretro/Craft"
license=('custom:Craft License')
depends=('zlib' 'glibc')
makedepends=('git' 'cmake')
source=("$pkgname::git+https://github.com/libretro/craft.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -f Makefile.libretro
}

package() {
  cd $pkgname

  install -Dm644 ./craft_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
  install -Dm644 ./LICENSE.md "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
