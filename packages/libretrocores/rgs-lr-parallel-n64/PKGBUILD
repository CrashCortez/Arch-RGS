# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-parallel-n64
pkgver=5068
pkgrel=1
pkgdesc="Libretro implementation of Parallel-N64. (Nintendo 64)"
arch=('x86_64')
url='https://github.com/libretro/parallel-n64'
license=('GPL2')
depends=('libgl')
makedepends=('git' 'mesa')
source=("$pkgname::git+https://github.com/libretro/parallel-n64.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make WITH_DYNAREC='x86_64'
}

package() {
  cd $pkgname

  install -Dm644 ./parallel_n64_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
