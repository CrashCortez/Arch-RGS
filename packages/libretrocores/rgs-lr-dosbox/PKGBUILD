# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-dosbox
pkgver=353
pkgrel=1
pkgdesc="Libretro implementation of DOSBox."
arch=('x86_64')
url="https://github.com/libretro/dosbox-libretro"
license=('GPL')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/dosbox-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -f Makefile.libretro -j$(nproc)
}

package() {
  cd $pkgname

  install -Dm644 ./dosbox_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
