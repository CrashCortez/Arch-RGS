# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-kronos
pkgver=7.0b21076
pkgrel=1
pkgdesc="Libretro implementation of Kronos. (Sega Saturn/ST-V)"
arch=('x86_64')
url='https://github.com/barbudreadmon/kronos-libretro'
license=('unknown')
makedepends=('git')
source=("$pkgname::git+https://github.com/barbudreadmon/kronos-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname/libretro

  make -j$(nproc)
}

package() {
  cd $pkgname/libretro

  install -Dm755 ./yabause_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
