# Maintainer: V0rt3x667 <al-g0l at outlook dot com>

pkgname=rgs-lr-tyrquake
pkgver=1747
pkgrel=1
pkgdesc="Libretro implementation of Tyrquake. (Quake)"
arch=('x86_64')
url="http://disenchant.net/tyrquake/"
license=('GPL2')
depends=('sdl2')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/tyrquake.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./tyrquake_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
