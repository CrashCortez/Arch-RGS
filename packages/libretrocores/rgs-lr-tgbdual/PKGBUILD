# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-tgbdual
pkgver=107.c13b941
pkgrel=1
pkgdesc="Libretro implementation of TGB Dual."
arch=('x86_64')
url="https://github.com/libretro/tgbdual-libretro"
license=('GPL2')
source=("$pkgname::git+https://github.com/libretro/tgbdual-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./tgbdual_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
