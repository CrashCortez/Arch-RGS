# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-beetle-vb
pkgver=722
pkgrel=1
pkgdesc="Libretro implementation of Mednafen VB."
arch=('x86_64')
url="https://github.com/libretro/beetle-vb-libretro"
license=('GPL2')
depends=('gcc-libs')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/beetle-vb-libretro.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./mednafen_vb_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
