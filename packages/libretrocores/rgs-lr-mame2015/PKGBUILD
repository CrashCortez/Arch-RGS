# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-mame2015
pkgver=35230.d43c94fde6
pkgrel=1
arch=('x86_64')
pkgdesc="Libretro implementation of MAME 2015. (Arcade)"
url="https://github.com/libretro/mame2015-libretro"
license=('custom:MAME License')
depends=('zlib' 'glibc')
makedepends=('git' 'python2')
source=("$pkgname::git+https://github.com/libretro/mame2015-libretro.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -j$(nproc)
}

package() {
  cd $pkgname

  install -Dm644 ./mame2015_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
  install -Dm644 ./docs/license.txt -t "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
