pkgname=rgs-lr-pokemini
pkgver=80.2b41108
pkgrel=1
pkgdesc="Libretro implementation of Pok√©mon-Mini."
arch=('x86_64')
url="https://github.com/libretro/PokeMini"
license=('GPL3')
depends=('glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/PokeMini.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./pokemini_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname"
}
