# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-meowpc98
pkgver=86.ed1c527
pkgrel=1
pkgdesc="Libretro implementation of Neko Project 2. (PC98)"
arch=('x86_64')
url="https://github.com/libretro/libretro-meowPC98"
license=('GPL2')
depends=('zlib' 'glibc')
makedepends=('git' 'python2')
source=("$pkgname::git+https://github.com/libretro/libretro-meowPC98.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname/libretro

  make
}

package() {
  cd $pkgname

  install -Dm644 ./libretro/nekop2_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
