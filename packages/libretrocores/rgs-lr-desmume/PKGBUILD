# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-desmume
pkgver=6320
pkgrel=1
pkgdesc="Libretro implementation of Desmume. (Nintendo DS)"
arch=('x86_64')
url='https://github.com/libretro/desmume'
license=('GPL2')
depends=('libgl')
makedepends=('git' 'mesa')
source=("$pkgname::git+https://github.com/libretro/desmume.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname/desmume/src/frontend/libretro

  make -f Makefile.libretro -j$(nproc)
}

package() {
  cd $pkgname/desmume/src/frontend/libretro

  install -Dm644 ./desmume_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
