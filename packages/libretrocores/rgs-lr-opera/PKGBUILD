# Maintainer: V0rt3x667 <al-g0l@outlook.com>
pkgname=rgs-lr-opera
pkgver=417
pkgrel=1
pkgdesc="Libretro 3DO Interactive Multiplayer Core"
arch=('x86_64')
url="https://github.com/libretro/opera-libretro"
license=('GPL3')
depends=(
  'glibc'
  'zlib'
)
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/opera-libretro")
sha256sums=('SKIP')
_installdir="/opt/archrgs/libretrocores/$pkgname"

pkgver() {
  cd "$pkgname"

  git rev-list --count HEAD
}

build() {
  cd "$pkgname"

  make
}

package() {
  cd "$pkgname"

  install -Dm644 ./opera_libretro.so -t "${pkgdir}${_installdir%/}"
}
