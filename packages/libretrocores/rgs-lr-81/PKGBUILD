# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-81
pkgver=158
pkgrel=1
pkgdesc="Libretro implementation of EightyOne. (ZX81) (WIP)"
arch=('x86_64')
url="https://github.com/libretro/81-libretro.git"
license=('GPL3')
depends=('zlib' 'glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/81-libretro.git")
sha256sums=('SKIP')

pkgver() {
     cd $pkgname

     git rev-list --count HEAD
}

build() {
     cd $pkgname

     make -f Makefile.libretro
}

package() {
    cd $pkgname

    install -Dm644 "81_libretro.so" -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
