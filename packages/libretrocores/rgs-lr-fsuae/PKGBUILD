# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-fsuae
pkgver=1712.7990f7ad
pkgrel=1
pkgdesc="Libretro implementation of FSUAE. (Commodore Amiga) (WIP)"
arch=('x86_64')
url="https://github.com/libretro/libretro-fsuae"
license=('GPL3')
depends=('zlib')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/libretro-fsuae.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  ./autogen.sh
  ./configure
  make gen
  make clean
  make
}

package() {
  cd $pkgname

  install -Dm644 ./fsuae_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
