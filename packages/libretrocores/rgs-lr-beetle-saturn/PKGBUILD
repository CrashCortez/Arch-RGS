# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-beetle-saturn
pkgver=495
pkgrel=1
pkgdesc="Libretro implementation of Mednafen Saturn."
arch=('x86_64')
url="https://github.com/libretro/beetle-saturn-libretro"
license=('GPLv2')
makedepends=('git')
depends=('libglvnd' 'clang')
source=("$pkgname::git+https://github.com/libretro/beetle-saturn-libretro.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./mednafen_saturn_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
