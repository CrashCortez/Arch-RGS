# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-beetle-supergrafx
pkgver=806
pkgrel=1
pkgdesc="Libretro implementation of Mednafen PCE Fast. (SuperGrafx TG-16)"
arch=('x86_64')
url="https://github.com/libretro/beetle-supergrafx-libretro.git"
license=('GPL2')
depends=('zlib')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/beetle-supergrafx-libretro.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./mednafen_supergrafx_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
