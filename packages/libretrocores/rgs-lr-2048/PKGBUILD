# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-2048
pkgver=138
pkgrel=1
pkgdesc="Libretro implementation of 2048."
arch=('x86_64')
url="https://github.com/libretro/libretro-2048"
license=('GPL' 'LGPL')
depends=('glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/libretro-2048.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make -f Makefile.libretro
}

package() {
  cd $pkgname

  install -Dm644 ./2048_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
