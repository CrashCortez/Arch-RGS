# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-handy
pkgver=195
pkgrel=1
pkgdesc="Libretro implementation of Handy. (Atari Lynx)"
arch=('x86_64')
url="https://github.com/libretro/libretro-handy"
license=('GPL3')
depends=('zlib' 'glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/libretro-handy.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname

  git rev-list --count HEAD
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  install -Dm644 ./handy_libretro.so "${pkgdir}/opt/archrgs/libretrocores/$pkgname/handy_libretro.so"
}
