# Maintainer: V0rt3x667 <al-g0l@outlook.com>

pkgname=rgs-lr-beetle-pce-fast
pkgver=965
pkgrel=1
pkgdesc="Libretro implementation of Mednafen PCE Fast."
arch=('x86_64')
url='https://github.com/libretro/beetle-pce-fast-libretro'
license=('GPL2')
depends=('gcc-libs')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/beetle-pce-fast-libretro.git")
sha256sums=('SKIP')

pkgver() {
  	cd $pkgname

  	git rev-list --count HEAD
}

build() {
  	cd $pkgname
	make
}

package() {
	cd $pkgname

  	install -Dm644 ./mednafen_pce_fast_libretro.so -t "${pkgdir}/opt/archrgs/libretrocores/$pkgname/"
}
