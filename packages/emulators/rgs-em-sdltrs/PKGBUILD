# Maintainer: V0rt3x667 <al-g0l@outlook.com>
pkgname=rgs-em-sdltrs
pkgver=1.2.10
pkgrel=1
pkgdesc="A TRS-80 Model 1, 3, 4 and 4P Emulator"
arch=('x86_64')
url="https://gitlab.com/jengun/sdltrs"
license=('custom')
depends=( 
  'libxt'
  'sdl2'
)
source=("https://gitlab.com/jengun/sdltrs/-/archive/$pkgver/sdltrs-$pkgver.tar.gz")
sha256sums=('16834e1392395c9cacede84603021a650fba07274062d01544944e64240f6558')
_installdir="/opt/archrgs/emulators/$pkgname"


build() {
  cd sdltrs-$pkgver
    
  ./autogen.sh
  ./configure \
    --prefix="$_installdir"
  make
}

package() {
  cd sdltrs-$pkgver
  
  make DESTDIR="$pkgdir" install
}
