# Maintainer: V0rt3x667 <al-g0l@outlook.com>
pkgname=rgs-em-atari800
pkgver=4.2.0
pkgrel=1
pkgdesc="An Atari 400, 800, 600 XL, 800XL, 130XE and 5200 Emulator"
arch=('x86_64')
url="https://atari800.github.io"
license=('GPL2')
depends=('sdl')
source=("https://github.com/atari800/atari800/releases/download/ATARI800_4_2_0/atari800-$pkgver-src.tgz")
sha256sums=('55cb5568229c415f1782130afd11df88c03bb6d81fa4aa60a4ac8a2f151f1359')
_installdir="/opt/archrgs/emulators/$pkgname"

build() {
  cd "atari800-$pkgver"

  ./configure \
    --prefix="$_installdir" \
    --with-video=sdl \
    --with-sound=sdl \
    --with-opengl \
    --enable-riodevice
  make
}

package() {
  cd "atari800-$pkgver/src"

  make DESTDIR="$pkgdir" install
}
