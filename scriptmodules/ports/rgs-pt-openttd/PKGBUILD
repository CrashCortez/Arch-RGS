# Maintainer: V0rt3x667 <al-g0l@outlook.com>
pkgname=rgs-pt-openttd
pkgver=1.10.3
pkgrel=1
pkgdesc="Game Engine for Transport Tycoon Deluxe"
arch=('x86_64')
url="https://www.openttd.org"
license=('GPL2')
depends=(
  'allegro4'
  'fluidsynth'
  'fontconfig'
  'freetype2'
  'icu'
  'lzo'
)
makedepends=(
  'cmake'
  'git'
)
source=("$pkgname::git+https://github.com/OpenTTD/OpenTTD#tag=$pkgver")
sha256sums=('SKIP')
_installdir="/opt/archrgs/ports/$pkgname"

build() {
  cd "$pkgname"

  ./configure \
    --prefix-dir="${_installdir%/}" \
    --binary-name=openttd \
    --binary-dir=bin \
    --data-dir=share/data \
    --doc-dir=share/doc \
    --install-dir="${pkgdir}" \
    --with-fluidsynth \
    --menu-name="OpenTTD"
  make
}

package() {
  cd "$pkgname"

  make DESTDIR="${pkgdir}" install
}
