# Maintainer: V0rt3x667 <al-g0l@outlook.com>
pkgname=rgs-lr-pokemini
pkgver=147
pkgrel=1
pkgdesc="Libretro Core - Pok√©mon-Mini"
arch=('x86_64')
url="https://github.com/libretro/PokeMini"
license=('GPL3')
depends=('glibc')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/PokeMini")
sha256sums=('SKIP')
_installdir="/opt/archrgs/libretrocores/$pkgname"

pkgver() {
  cd "$pkgname"

  git rev-list --count HEAD
}

build() {
  cd "$pkgname"

  make
}

package() {
  cd "$pkgname"

  install -Dm644 ./pokemini_libretro.so -t "${pkgdir}${_installdir%/}"
}

