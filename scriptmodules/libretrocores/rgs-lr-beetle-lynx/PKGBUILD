# Maintainer: V0rt3x667 <al-g0l@outlook.com>
pkgname=rgs-lr-beetle-lynx
pkgver=696
pkgrel=1
pkgdesc="Libretro Core - Atari Lynx"
arch=('x86_64')
url="https://github.com/libretro/beetle-lynx-libretro"
license=('GPL2')
depends=('gcc-libs')
makedepends=('git')
source=("$pkgname::git+https://github.com/libretro/beetle-lynx-libretro")
sha256sums=('SKIP')
_installdir="/opt/archrgs/libretrocores/$pkgname"

pkgver() {
  cd "$pkgname"

  git rev-list --count HEAD
}

build() {
  cd "$pkgname"

  make
}

package() {
  cd "$pkgname"

  install -Dm644 ./mednafen_lynx_libretro.so -t "$pkgdir/${_installdir%/}"
}

